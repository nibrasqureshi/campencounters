<div class="container-fluid w-50 border rounded shadow mt-5 mb-5 p-4 bg-light">
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%"></div>  </div>
	<h1 class="mt-3">Verify your Initials!</h1>

	<%= form_for @user, url:next_wizard_path, method: "PUT" do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline" >
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div> 
 
  <div class="form-outline mb-4" >
    <%= f.label :new_password %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <%= f.submit "Next",class: 'btn btn-success btn-block mt-4'  %>
  <%= link_to "skip", next_wizard_path, class: 'btn btn-secondary btn-block mt-4' %>
  <%= link_to "Previous", previous_wizard_path, class: 'btn btn-warning btn-block mt-4' %>
<% end %>
</div>