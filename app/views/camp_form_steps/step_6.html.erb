<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center bg-light"> 
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%"></div>
    </div>
  <h1  class="mt-3">Have you joined a camp before?</h1>
  <h4>can you tell us it's name?</h4>
  <%= form_for @user, url:next_wizard_path, method: "PUT" do |f| %> 
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :camp_id, name: 'camp[id]', value: @camp_id %>

    <input type="checkbox" class="btn-check" id="btncheck2" autocomplete="off">
    <label class="btn btn-outline-primary mb-2" for="btncheck2">No</label>
    
    <label class="btn btn-outline-primary mb-2" for="toggle">Yes</label>
    <input class="btn-check mb-2" type="checkbox" id="toggle">
    <div class="control-me">
    <%= f.text_field :feedback, class: 'form-control' %>
    </div>

  <div class="form-outline mb-2">

  <%= f.hidden_field :submission_status, value: 'in_progress' %>
  <%= f.hidden_field :profile_percentage, value: '60' %>
  <%= f.submit "Next",class: 'btn btn-success btn-block mt-4'  %>
  <%= link_to "skip", next_wizard_path, class: 'btn btn-secondary btn-block mt-4' %>
  <%= link_to "Previous", previous_wizard_path(camp: {id: @camp_id}), class: 'btn btn-warning btn-block mt-4' %>
  </div>
  <% end %>