<div class="container-fluid w-50 border rounded shadow mt-5 mb-5 p-4 text-center bg-light"> 
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%"></div> 
  </div>
  <h1  class="mt-3">Set your avatar?</h1>
  <%= render 'admin/users/profile_pic' %>
  <%= form_for @user, url:next_wizard_path, method: "PUT" do |f| %> 
  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-outline mb-4">
    <%= f.label :Profile_photo %><br />
    <%= f.file_field :avatar %>
  </div>

  <%= f.hidden_field :profile_percentage, value: '70' %>
  <%= f.submit "Next",class: 'btn btn-success btn-block mt-4'  %>
  <%= link_to "skip", next_wizard_path, class: 'btn btn-secondary btn-block mt-4' %>
  <%= link_to "Previous", previous_wizard_path, class: 'btn btn-warning btn-block mt-4' %>
  <% end %>