<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center bg-light"> 
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width: 90%"></div>
  </div>
  <h1  class="mt-3">Have you joined a camp before?</h1>
  <%= form_for @user, url:next_wizard_path, method: "PUT" do |f| %> 
  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-outline">
    <%= f.label :camp_type %><br />
    <%= f.select :camp_type, User.camp_types.keys,{}, class: "form-select", required:true %>
  </div>

  <%= f.hidden_field :camp_id, value: @camp_id %>
  <%= f.hidden_field :submission_status, value: 'submitted' %>
  <%= f.hidden_field :profile_percentage, value: '100' %>
  <%= f.submit "Next",class: 'btn btn-success btn-block mt-4'  %>
  <%= link_to "skip", next_wizard_path, class: 'btn btn-secondary btn-block mt-4' %>
  <%= link_to "Previous", previous_wizard_path, class: 'btn btn-warning btn-block mt-4' %>
  <% end %>
</div>
