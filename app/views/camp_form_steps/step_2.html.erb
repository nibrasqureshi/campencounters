<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center bg-light">  
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%"></div>  
  </div>
  <h1 class="mt-3">Specify your gender</h1>
  <%= form_for @user, url:next_wizard_path, method: "PUT" do |f| %>
  <%= f.hidden_field :user_id, value: @user.id %>
  <%= f.hidden_field :camp_id, name: 'camp[id]', value: @camp_id %>
  
    <div class="form-outline mb-4">
      <%= f.radio_button :gender, "male" %>
      <%= f.label :gender_male,   "Male" %>
      <%= f.radio_button :gender, "female" %>
      <%= f.label :gender_female,   "Female" %>
      <%= f.radio_button :gender, "other" %>
      <%= f.label :gender_other, "Other" %>
    </div>
   
    <%= f.hidden_field :profile_percentage, value: '20' %>
    <%= f.submit "Next",class: 'btn btn-success btn-block mt-4'  %>
    <%= link_to "skip", next_wizard_path, class: 'btn btn-secondary btn-block mt-4' %>
    <%= link_to "Previous", previous_wizard_path(camp: {id: @camp_id}), class: 'btn btn-warning btn-block mt-4' %>
  <% end %>
</div>