<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center bg-light"> 
  <div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-label="Animated striped example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
    </div>
  <h1 class="mt-4 mb-4">
    Here you Go! You have done it all!
  </h1>
  <button type="button" class="btn btn-success btn-block mt-4" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Complete
  </button>
  <%= link_to "Previous", previous_wizard_path, class: 'btn btn-success btn-block mt-4' %>
</div>  


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="exampleModalLabel">confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center text-danger">
        Confirm your changes! <br>
        You will not be able to edit this again!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Close</button>
        <button type="button" class='btn btn-success btn-block'  data-bs-dismiss="modal"><%= link_to "Save", next_wizard_path, class: 'text-light text-decoration-none' %></button>
      </div>
    </div>
  </div>
</div>