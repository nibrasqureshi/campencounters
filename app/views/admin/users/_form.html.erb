<div class="container-fluid w-50 border rounded shadow mt-5 p-4 bg-light ">
  <div class="text-center">
    <%= render 'profile_pic' %>
  </div> <br>
  <%= form_for ([:admin, @user]) do |f| %>
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline" >
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :Profile_photo %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div> 
  
  <div class="form-outline mb-4">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :country%><br />
    <%= f.country_select :country, {}, class: "dropdown-item"   %>
  </div>

  <div class="form-outline mb-4" >
    <%= f.label :new_password %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="text-center">
    <%= f.submit  class: 'btn btn-primary btn-block mb-4' %>
    <% end %>
  </div>
</div>